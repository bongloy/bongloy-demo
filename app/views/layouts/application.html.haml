!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}
    %title
      Bongloy-Demo
    = javascript_include_tag(@checkout_configuration.bongloy_js_url)
    = tag(:meta, :name => "bongloy-publishable-key", :content => @checkout_configuration.publishable_key)
    = csrf_meta_tags
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"

  %body
    .container-fluid
      %nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
        .container-fluid
          .navbar-header
            %button.navbar-toggle.collapsed{:type => "button", :data => {:toggle => "collapse", :target => "#main_navbar", :expanded => false}}
              %span.sr-only
                Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{:href => "#"}
              Bongloy Demo
          #main_navbar.collapse.navbar-collapse
            %ul#resources_navbar.nav.navbar-nav
              %li
                = link_to("Bongloy Checkout", "#bongloy_checkout")
              %li
                = link_to(fa_icon("book", :text => "Documentation"), "https://www.bongloy.com/documentation", :target => "_blank")
              - if !user_signed_in?
                %li
                  = link_to(fa_icon("facebook", :text => "Sign In"), omniauth_authorize_path(:user, :facebook))
      - flash.each do |type, message|
        #flash.alert.alert-dismissible.fade.in{:class => "alert #{alert_class_for(type)}"}
          %button.close{:type => "button", :data => {:dismiss => "alert"}}
            %span{"aria-hidden" => true}
              &times;
            %span.sr-only
              Close
          = message.html_safe
      = yield
      .github-fork-ribbon-wrapper.right-bottom
        .github-fork-ribbon
          = link_to("Fork me on Github", "https://github.com/dwilkie/bongloy-demo")
